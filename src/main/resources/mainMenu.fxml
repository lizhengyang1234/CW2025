<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>

<!-- 主菜单：更美观、更统一的布局 -->
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.comp2042.MainMenuController"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: linear-gradient(to bottom, #071424, #0d1f36);">

    <!-- 居中菜单 -->
    <VBox alignment="CENTER"
          spacing="28"
          layoutX="275"
          layoutY="130"
          prefWidth="350">

        <!-- 主标题 -->
        <Label text="TETRIS"
               style="-fx-text-fill: #66d9ff;
                      -fx-font-size: 60px;
                      -fx-font-family: 'Arial';
                      -fx-font-weight: bold;
                      -fx-effect: dropshadow(gaussian, #00aaff, 24, 0.6, 0, 0);" />

        <!-- 普通模式 -->
        <Button text="Start Game"
                onAction="#onStartGame"
                prefWidth="230" prefHeight="55"
                styleClass="menuButton"/>

        <!-- 炸弹模式 -->
        <Button text="Bomb Mode"
                onAction="#onStartBombMode"
                prefWidth="230" prefHeight="55"
                styleClass="menuButton-warning"/>

        <!-- 退出 -->
        <Button text="Exit"
                onAction="#onExit"
                prefWidth="230" prefHeight="55"
                styleClass="menuButton"/>

    </VBox>

    <!-- CSS -->
    <stylesheets>
        <URL value="@window_style.css"/>
    </stylesheets>

</AnchorPane>